<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.mandyyang.m10616008_1011.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ScaleBright"
            android:id="@+id/button1"
            android:onClick="ScaleBright" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RGB2Gray"
            android:id="@+id/button2"
            android:onClick="RGB2Gray"
            android:layout_below="@+id/button1"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ColorGammaContrast"
            android:id="@+id/button3"
            android:onClick="ColorGammaContrast"
            android:layout_below="@+id/button2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image Sub"
            android:id="@+id/button4"
            android:onClick="b1_Click"
            android:layout_below="@+id/button3"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Histogram"
            android:id="@+id/button5"
            android:onClick="b2_Click"
            android:layout_below="@+id/button4"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Histogram2"
            android:id="@+id/button6"
            android:onClick="b3_Click"
            android:layout_below="@+id/button5"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HE"
            android:id="@+id/button7"
            android:onClick="b4_Click"
            android:layout_below="@+id/button6"/>



    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <ImageView
            android:id="@+id/inputImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/f0" />

        <ImageView
            android:id="@+id/inputImg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/f1" />

        <ImageView
            android:id="@+id/outputImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/outputImg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




    </LinearLayout>


    </ScrollView>

</LinearLayout>